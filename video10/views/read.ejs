<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="bg-zinc-900 min-h-screen p-10 text-white">
      <div class="nav mb-6">
        <a class="text-blue-500 hover:underline" href="/">Back to Home</a>
      </div>
      <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
      <div class="users flex gap-3 flex-wrap">
        <% if(users.length > 0){%> <% users.forEach((user)=>{%>
        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
          <div class="w-full h-72 rounded-lg bg-zinc-700">
            <img
              class="w-full h-full object-cover object-top"
              src="<%= user.image %>"
              alt="loading..."
            />
          </div>
          <h3 class="text-1xl tracking-tighter mt-3"><%= user.name %></h3>
          <h5 class="text-zinc-500"><%= user.email %></h5>
          <div class="flex justify-evenly mt-10">
            <a
              class="text-zinc-200 hover:text-zinc-500"
              href="/edit/<%= user._id%>"
              >Edit User</a
            >
            <a
              class="text-red-500 hover:text-red-900"
              href="/delete/<%= user._id%>"
              >Delete User</a
            >
          </div>
        </div>
        <%})%> <%}else{%>
        <h1 class="text-zinc-500">No user yet</h1>
        <%}%>
      </div>
    </div>
  </body>
</html>
